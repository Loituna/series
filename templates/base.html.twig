<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    {# crée un titre globale et permet l'accés via l'attribut "parent" #}
    <title>{% block title %}Series !{% endblock %}</title>

    {#  change la petite icone en haut a gauche d'un onglet #}
    <link rel="icon" href="{{ asset('img/icon.png') }}">


    {# lien vers feuille de style permettant de mettre a plat, normé  la css sur l'integralité des navigateurs #}
    <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">

    {# Lien ver google Font + une ligne "font-family: 'Cookie', cursive;" dans la CSS associé >> body #}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cookie&display=swap" rel="stylesheet">


</head>


<body>
<div class="container">
    <header>{{ include('menu/nav.html.twig') }}

        <h1><a href="{{ path('main_home') }}"><img src="{{ asset('img/logo.svg') }}" alt="Series !"></a></h1>
    </header>

    {% for label, messages in app.flashes([]) %}
        {% for message in messages %}
            <div class="flash flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}


    <main>{% block body %}
            <p> test</p>{% endblock %}</main>

    <footer>{{ include('menu/nav.html.twig') }}</footer>
</div>

{% block extraStyle %}

{% endblock %}




</body>
</html>